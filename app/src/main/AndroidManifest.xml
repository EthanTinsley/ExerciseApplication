<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.exerciseapplication.finalexerciseapplication">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FinalExerciseApplication">
        <activity android:name=".NewWorkout"></activity>
        <activity android:name=".BuildWorkoutScreen" />
        <activity android:name=".ExerciseAddTemplate" />
        <activity android:name=".ShoulderExercises" />
        <activity android:name=".MuscleGroupSelection" />
        <activity android:name=".CompletedWorkouts" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>